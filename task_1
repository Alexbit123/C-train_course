#include <iostream>
#include <string>
#include <vector>

using namespace std;
/*
Вызовите SplitIntoWords("test search query"s) и пройдитесь по результату циклом for, выводя квадратные скобки вокруг каждого слова. Получится [test] [search] [query].
*/

vector<string> SplitIntoWords(const string& text) {
    vector<string> words;
    string word;
    for (const char c : text) {
        if (c == ' ') {
            if (!word.empty()) {
                words.push_back(word);
                word.clear();
            }
        } else {
            word += c;
        }
    }
    if (!word.empty()) {
        words.push_back(word);
    }

    return words;
}

int main() {
	  // ваш код
    for (string w : SplitIntoWords("test search query"s)){cout << '[' << w << ']' ; }
}



// задание : 
Урок 5. Хитрости константных ссылок
Задание 1
Поэкспериментируйте с вызовом функции SplitIntoWords, которая принимает строку по константной ссылке. Передайте в неё текст 
test search query и выведите полученные слова в квадратных скобках.

